def COLOR_MAP = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
]

pipeline {
    agent any
    tools {
        nodejs 'node16'
        jdk 'jdk17'
    }
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        registryCredential = 'ecr:us-east-1:awscreds'
        IMAGE_NAME   = '739275449845.dkr.ecr.us-east-1.amazonaws.com/flipkartimg'
        DOCKERHUB_REPO = 'elsonpulikkan/flipkart'
    }

    stages {
        stage("Clean Workspace") {
            steps { cleanWs() }
        }

        stage("Git Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/elsonpulikkan96/Flipkart-DevSecops-EKS-Scout-OWASP-ZAP-Gitops-project.git'
            }
        }

        stage('Install Dependencies') {
            steps { sh "npm ci --silent" }
        }

        stage("Sonarqube Analysis ") {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh """${SCANNER_HOME}/bin/sonar-scanner -Dsonar.projectName=flipkart -Dsonar.projectKey=flipkart"""
                }
            }
        }

        stage("Quality Gate") {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                    }
                }
            }
        }

        stage("OWASP Dependency Check Scan") {
            steps {
                dependencyCheck additionalArguments: '''
                    --scan .
                    --disableYarnAudit
                    --disableNodeAudit
                ''',
                odcInstallation: 'dp-check'
                dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }

        stage('Docker Scout FS') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh "docker login -u elsonpulikkan -p ${dockerpwd}"
                        sh "docker-scout quickview fs://. > quickview-report.txt || true"
                        sh "docker-scout cves fs://. > cves-report.txt || true"
                        sh "echo '--- Docker Scout Summary ---'"
                        sh "head -20 quickview-report.txt || true"
                        sh "docker logout || true"
                    }
                }
                archiveArtifacts artifacts: '*.txt, *.json', fingerprint: true
            }
        }

        stage("Build Docker Image") {
            steps {
                script {
                    env.LOCAL_IMAGE = "flipkart:${BUILD_NUMBER}"
                    sh "docker rmi -f ${env.LOCAL_IMAGE} || true"
                    sh "docker build -t ${env.LOCAL_IMAGE} ."
                }
            }
        }

        stage('Docker Scout Image') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh "docker login -u elsonpulikkan -p ${dockerpwd}"
                        sh "docker-scout cves ${env.LOCAL_IMAGE} > image-cves-report.txt || true"
                        sh "docker-scout recommendations ${env.LOCAL_IMAGE} > image-recommendations.txt || true"
                        sh "docker logout || true"
                    }
                }
                archiveArtifacts artifacts: '*.txt, *.json', fingerprint: true
            }
        }

        stage("Upload App Image to ECR") {
            steps {
                script {
                    sh """
                        docker tag ${env.LOCAL_IMAGE} ${IMAGE_NAME}:${BUILD_NUMBER}
                        docker tag ${env.LOCAL_IMAGE} ${IMAGE_NAME}:latest
                    """
                    def dockerImage = docker.image("${IMAGE_NAME}")
                    docker.withRegistry("https://${IMAGE_NAME.split('/')[0]}", registryCredential) {
                        dockerImage.push("${BUILD_NUMBER}")
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh "docker login -u elsonpulikkan -p ${dockerpwd}"
                        sh "docker tag ${env.LOCAL_IMAGE} ${DOCKERHUB_REPO}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKERHUB_REPO}:${BUILD_NUMBER}"
                        sh "docker tag ${env.LOCAL_IMAGE} ${DOCKERHUB_REPO}:latest"
                        sh "docker push ${DOCKERHUB_REPO}:latest"
                        sh "docker logout || true"
                    }
                }
            }
        }

        stage("Deploy to Container (ephemeral host port)") {
            steps {
                script {
                    sh "docker rm -f flipkart || true"

                    // Start container with -P so Docker assigns a free host port
                    def containerId = sh(script: "docker run -d --name flipkart -P ${env.LOCAL_IMAGE}", returnStdout: true).trim()
                    echo "containerId=${containerId}"

                    // Extract mapped host port (for container port 80)
                    def hostPort = sh(script: "docker port ${containerId} 80 | awk -F: '{print \$2}' | sed 's/[^0-9]*//g' | head -n1", returnStdout: true).trim()

                    if (!hostPort) {
                        error "Failed to determine mapped host port for container ${containerId}"
                    }

                    env.APP_HOST_PORT = hostPort
                    echo "Container flipkart mapped host port: ${env.APP_HOST_PORT}"

                    // quick smoke test
                    sh "curl -sSf http://localhost:${env.APP_HOST_PORT}/ || (echo 'health check failed' && docker logs ${containerId} && exit 1)"
                }
            }
        }

        stage("DAST Scan with OWASP ZAP") {
            steps {
                script {
                    echo "ðŸ” Running OWASP ZAP baseline scan against http://localhost:${env.APP_HOST_PORT} ..."
                    def targetUrl = "http://localhost:${env.APP_HOST_PORT}"

                    // Use env.WORKSPACE for mount (no $(pwd) -> no $ escaping problems)
                    def zapCmd = "docker run --rm --user root --network host -v ${env.WORKSPACE}:/zap/wrk:rw -t zaproxy/zap-stable zap-baseline.py -t ${targetUrl} -r zap_report.html -J zap_report.json"
                    def exitCode = sh(script: zapCmd, returnStatus: true)

                    echo "ZAP scan finished with exit code: ${exitCode}"

                    if (fileExists('zap_report.json')) {
                        def zapJson = readJSON file: 'zap_report.json'
                        def highCount = 0; def mediumCount = 0; def lowCount = 0
                        if (zapJson?.site) {
                            highCount = zapJson.site.collect { s -> s.alerts.findAll { it.risk == 'High' }.size() }.sum()
                            mediumCount = zapJson.site.collect { s -> s.alerts.findAll { it.risk == 'Medium' }.size() }.sum()
                            lowCount = zapJson.site.collect { s -> s.alerts.findAll { it.risk == 'Low' }.size() }.sum()
                        }
                        echo "ZAP: High=${highCount}, Medium=${mediumCount}, Low=${lowCount}"
                    } else {
                        echo "ZAP JSON report not found, continuing..."
                    }
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'zap_report.html,zap_report.json', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        always {
            script {
                def buildStatus = currentBuild.currentResult
                def buildUser = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')[0]?.userId ?: 'GitHub User'
                def buildUrl = "${env.BUILD_URL}"

                slackSend(
                    channel: '#devsecops',
                    color: COLOR_MAP[buildStatus],
                    message: """*${buildStatus}:* Job *${env.JOB_NAME}* Build #${env.BUILD_NUMBER}
                    ðŸ‘¤ *Started by:* ${buildUser}
                    ðŸ”— *Build URL:* <${buildUrl}|Click Here for Details>"""
                )

                emailext (
                    subject: "Pipeline ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: """
                        <p>GitHub URL :- https://github.com/elsonpulikkan96 </p>
                        <p>Flipkart DevSecops CICD pipeline status.</p>
                        <p>Project: ${env.JOB_NAME}</p>
                        <p>Build Number: ${env.BUILD_NUMBER}</p>
                        <p>Build Status: ${buildStatus}</p>
                        <p>Started by: ${buildUser}</p>
                        <p>Build URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    to: 'elsonpulikkan@gmail.com',
                    from: 'elsonpulikkan@gmail.com',
                    mimeType: 'text/html',
                    attachmentsPattern: 'quickview-report.txt,cves-report.txt,image-cves-report.txt,image-recommendations.txt,dependency-check-report.xml,zap_report.html,zap_report.json'
                )
            }
        }
    }
}
